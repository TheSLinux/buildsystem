pkgdesc="Diff utility which works with binary files"
arch=('i686' 'x86_64')
url="http://xdelta.org/"
license=('GPL')
depends=('xz')
source=(http://xdelta.googlecode.com/files/$pkgbase-$pkgver.tar.gz
        xdelta-3.0.7-regtest_size_t.patch)

prepare() {
  cd $pkgbase-$pkgver
  patch -Np1 -i ../xdelta-3.0.7-regtest_size_t.patch
}

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr
  make
}

check() {
  cd $pkgbase-$pkgver
  ./xdelta3 test
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}
