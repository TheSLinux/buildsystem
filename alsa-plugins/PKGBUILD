# Original Contributor: Daniel Ehlers <danielehlers@mindeye.net>

pkgdesc="Extra alsa plugins"
arch=(i686 x86_64)
url="http://www.alsa-project.org"
license=(GPL)
depends=(alsa-lib)
makedepends=(libpulse jack ffmpeg)
optdepends=('libpulse: PulseAudio plugin'
            'jack: Jack plugin'
            'ffmpeg: libavcodec resampling plugin, a52 plugin'
            'libsamplerate: libsamplerate resampling plugin'
            'speex: libspeexdsp resampling plugin')
options=('!libtool')
source=("ftp://ftp.alsa-project.org/pub/plugins/$pkgbase-$pkgver.tar.bz2")

prepare() {
  cd $pkgbase-$pkgver
  sed -i 's/ && LIBAVCODEC_VERSION_MINOR >= 34//' a52/pcm_a52.c
}

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install

  install -d "$pkgdir/usr/share/doc/$pkgbase"
  install -m644 doc/README* doc/*.txt "$pkgdir/usr/share/doc/$pkgbase/"
}
