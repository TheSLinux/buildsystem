pkgdesc="Bitstream vera fonts"
arch=('any')
license=('custom')
url='http://www-old.gnome.org/fonts/'
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
provides=('ttf-font')
install=vera.install
source=("http://ftp.gnome.org/pub/GNOME/sources/${pkgbase}/1.10/${pkgbase}-${pkgver}.tar.bz2")

package() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  install -d ${pkgdir}/usr/share/fonts/TTF
  install -m644 *.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -D -m644 COPYRIGHT.TXT ${pkgdir}/usr/share/licenses/ttf-bitstream-vera/LICENSE
}
