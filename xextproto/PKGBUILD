# Maintainer: Duc M. Tran <901stt@gmail.com>
# Orignal Maintainer: Jan de Groot <jgc@archlinux.org>

pkgdesc="X11 various extension wire protocol"
arch=('any')
license=('custom')
makedepends=('xmlto' 'xorg-util-macros' 'docbook-xsl')
url="http://xorg.freedesktop.org/"
source=(${url}/releases/individual/proto/${pkgbase}-${pkgver}.tar.bz2)

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgbase}/COPYING"
}
