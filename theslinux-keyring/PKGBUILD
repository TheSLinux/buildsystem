# Maintainer: Ky-Anh Huynh <kyanh@theslinux.org>

pkgdesc='TheSLinux PGP keyring'
arch=('any')
url='https://github.com/TheSLinux/security-keyring'
license=('GPL')
install="${PACKAGE_BASE}.install"
source=(https://github.com/TheSLinux/security-keyring/archive/${PACKAGE_VERSION}.tar.gz)

package() {
  cd "${srcdir}/security-keyring-${pkgver}"
  mkdir -pv ./usr/share/pacman/keyrings/
  PREFIX=./usr/ ./install.sh
}
