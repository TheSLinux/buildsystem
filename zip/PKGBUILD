# Original Contributor: dorphell <dorphell@archlinux.org>

_pkgver="${PACKAGE_VERSION/./}"
pkgdesc="Creates PKZIP-compatible .zip files"
arch=('i686' 'x86_64')
url="http://www.info-zip.org/Zip.html"
license=('BSD')
depends=('bzip2')
options=('!makeflags')
source=("ftp://ftp.info-zip.org/pub/infozip/src/${PACKAGE_BASE}${_pkgver}.zip")

build() {
   cd "${srcdir}/${pkgname}${_pkgver}"
   make -f unix/Makefile LOCAL_ZIP="$CFLAGS" prefix=/usr generic_gcc
}

package() {
   cd "${srcdir}/${pkgname}${_pkgver}"
   make -f unix/Makefile INSTALL=/bin/install prefix=${pkgdir}/usr \
     MANDIR=${pkgdir}/usr/share/man/man1 install
   install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE
}
