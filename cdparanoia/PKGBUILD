# Original Contributor: Alexander Fehr <pizzapunk gmail com>

pkgdesc="Compact Disc Digital Audio extraction tool"
arch=('i686' 'x86_64')
url="http://www.xiph.org/paranoia/"
license=('GPL')
depends=('glibc')
options=('!makeflags')
source=("http://downloads.xiph.org/releases/cdparanoia/cdparanoia-III-$pkgver.src.tgz"
        'gcc.patch')

build() {
  cd "${srcdir}/${pkgbase}-III-${pkgver}"
  patch -p0 -i ${srcdir}/gcc.patch
  ./configure --prefix=/usr --mandir=/usr/share/man
  make
}

package() {
  cd "${srcdir}/${pkgbase}-III-${pkgver}"
  make prefix="${pkgdir}/usr" MANDIR="${pkgdir}/usr/share/man" install
}
