# Original Contributor: Alexander Baldeck <alexander@archlinux.org>

pkgbase=xf86dgaproto
pkgver=2.1
pkgrel=2
pkgdesc="X11 Direct Graphics Access extension wire protocol"
arch=('any')
url="http://xorg.freedesktop.org/"
license=('custom')
source=("${url}/releases/individual/proto/${pkgbase}-${pkgver}.tar.bz2")
md5sums=('a036dc2fcbf052ec10621fd48b68dbb1')

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgbase}/COPYING"
}
